<Window x:Class="Mousinator5000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mousinator5000"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#00000000">
    <Grid Name="MyGrid" ShowGridLines="True">
          <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
      </Grid.RowDefinitions>
        <TextBlock Text="Game Over!" Foreground="Black" FontWeight="Bold"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Grid.Column="1"
                   VerticalAlignment="Center"/>
        <TextBlock Text="Ter" Grid.Row="1" Foreground="Black" FontWeight="Bold"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Grid.Column="0"
                   VerticalAlignment="Center"/>

    </Grid>
</Window>
